<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - School Management</title>
    <link rel="stylesheet" href="/css/style2.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head>
<body>
    <div class="admin-layout">
      <!-- Sidebar -->
    <%- include('../partials/sidebar') %>

    <!-- Main Content -->
    <div class="main-content">
      <header>
        <button class="menu-btn" id="menuBtn">
          <i class="fa fa-bars"></i>
        </button>
        <h1>Settings</h1>
      </header>
            <!-- Content -->
            <main class="admin-content">
                <section class="settings-container">
                    <!-- Change Password -->
                    <div class="settings-box">
                        <h2><i class="fa-solid fa-lock"></i> Change Admin Password</h2>
                        <form action="/admin/settings/change-password" method="POST">
                            <div class="form-group">
                                <label for="currentPassword">Current Password</label>
                                <input type="password" id="currentPassword" name="currentPassword" required>
                            </div>
                            
                            <div class="form-group">
                                <label for="newPassword">New Password</label>
                                <input type="password" id="newPassword" name="newPassword" required>
                            </div>
                            
                            <div class="form-group">
                                <label for="confirmPassword">Confirm Password</label>
                                <input type="password" id="confirmPassword" name="confirmPassword" required>
                            </div>
                            
                            <button type="submit" class="btn btn-primary">
                                <i class="fa fa-key"></i> Update Password
                            </button>
                        </form>
                    </div>
                    
                    <!-- Session/Term Settings -->
                    <div class="settings-box">
                        <h2><i class="fa-solid fa-calendar-days"></i> Current Session / Term</h2>
                        <form id="session-form">
                            <div class="form-group">
                                <label for="session">Current Session:</label>
                                <input type="text" id="session" placeholder="2024/2025" value="2024/2025">
                            </div>
                            
                            <div class="form-group">
                                <label for="term">Current Term:</label>
                                <select id="term">
                                    <option>1st Term</option>
                                    <option>2nd Term</option>
                                    <option>3rd Term</option>
                                </select>
                            </div>
                            
                            <button type="submit" class="btn btn-primary">
                                <i class="fa fa-save"></i> Update
                            </button>
                        </form>
                    </div>
                </section>
            </main>
        </div>
    </div>
 <script>
    // Sidebar toggle for mobile
    const menuBtn = document.getElementById('menuBtn');
    const sidebar = document.getElementById('sidebar');
    menuBtn.addEventListener('click', () => {
      sidebar.classList.toggle('active');
    });
  </script>
</body>
</html>
