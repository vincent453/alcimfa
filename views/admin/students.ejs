<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title><%= title %> - School Management</title>
<link rel="stylesheet" href="/css/style2.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
<style>
    .filter-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
        flex-wrap: wrap;
        gap: 10px;
    }

    .filter-bar input[type="text"] {
        padding: 8px 12px;
        border: 1px solid #ccc;
        border-radius: 6px;
        width: 250px;
        font-size: 14px;
    }

    .filter-bar select {
        padding: 8px 12px;
        border: 1px solid #ccc;
        border-radius: 6px;
        font-size: 14px;
    }

    .filter-bar label {
        font-weight: 600;
        margin-right: 6px;
    }

    .table-container table {
        width: 100%;
        border-collapse: collapse;
    }

    .text-center {
        text-align: center;
    }
</style>
</head>
<body>
<div class="admin-layout">
    <!-- Sidebar -->
    <%- include('../partials/sidebar') %>

    <!-- Main Content -->
    <div class="main-content">
      <header>
        <button class="menu-btn" id="menuBtn">
          <i class="fa fa-bars"></i>
        </button>
        <h1>Students Management</h1>
      </header>

      <main class="admin-content">
        <section class="page-actions">
            <a href="/admin/students/add" class="btn btn-primary">
                <i class="fa fa-plus"></i> Add New Student
            </a>
        </section>

        <!-- ðŸ” Filter and Sorting Controls -->
        <div class="filter-bar">
            <div>
                <input type="text" id="searchInput" placeholder="Search by name, class, or reg number...">
            </div>
            <div>
                <label for="sortSelect">Sort by:</label>
                <select id="sortSelect">
                    <option value="">-- Select --</option>
                    <option value="name-asc">Name (Aâ€“Z)</option>
                    <option value="name-desc">Name (Zâ€“A)</option>
                    <option value="class-asc">Class (Aâ€“Z)</option>
                    <option value="class-desc">Class (Zâ€“A)</option>
                    <option value="session-asc">Session (Oldestâ€“Newest)</option>
                    <option value="session-desc">Session (Newestâ€“Oldest)</option>
                </select>
            </div>
        </div>

        <section class="table-container">
            <table id="studentTable">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Class</th>
                        <th>Reg Number</th>
                        <th>Gender</th>
                        <th>Session</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (students.length === 0) { %>
                        <tr>
                            <td colspan="6" class="text-center">No students found</td>
                        </tr>
                    <% } else { %>
                        <% students.forEach(student => { %>
                            <tr>
                                <td><%= student.name %></td>
                                <td><%= student.classLevel %></td>
                                <td><%= student.regNumber %></td>
                                <td><%= student.gender %></td>
                                <td><%= student.session %></td>
                                <td class="actions">
                                    <a href="/admin/students/edit/<%= student._id %>" class="btn btn-sm btn-edit">
                                        <i class="fa fa-edit"></i> Edit
                                    </a>
                                    <form action="/admin/students/delete/<%= student._id %>" method="POST" style="display:inline;" onsubmit="return confirm('Delete this student?');">
                                        <button type="submit" class="btn btn-sm btn-delete">
                                            <i class="fa fa-trash"></i> Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        <% }); %>
                    <% } %>
                </tbody>
            </table>
        </section>
      </main>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Sidebar toggle
    const menuBtn = document.getElementById('menuBtn');
    const sidebar = document.getElementById('sidebar');
    const overlay = document.createElement('div');
    overlay.className = 'sidebar-overlay';
    document.body.appendChild(overlay);

    menuBtn.addEventListener('click', () => {
        sidebar.classList.toggle('active');
        overlay.classList.toggle('active');
    });
    overlay.addEventListener('click', () => {
        sidebar.classList.remove('active');
        overlay.classList.remove('active');
    });

    // ðŸ” Search + Sort logic
    const searchInput = document.getElementById('searchInput');
    const sortSelect = document.getElementById('sortSelect');
    const tableBody = document.querySelector('#studentTable tbody');
    const rows = Array.from(tableBody.querySelectorAll('tr'));

    function filterAndSort() {
        const searchText = searchInput.value.toLowerCase();
        const sortValue = sortSelect.value;

        // Filter
        const filteredRows = rows.filter(row => {
            const name = row.cells[0].textContent.toLowerCase();
            const classLevel = row.cells[1].textContent.toLowerCase();
            const regNumber = row.cells[2].textContent.toLowerCase();
            return (
                name.includes(searchText) ||
                classLevel.includes(searchText) ||
                regNumber.includes(searchText)
            );
        });

        // Sort
        filteredRows.sort((a, b) => {
            let aVal, bVal;

            switch (sortValue) {
                case 'name-asc':
                    aVal = a.cells[0].textContent;
                    bVal = b.cells[0].textContent;
                    return aVal.localeCompare(bVal);
                case 'name-desc':
                    aVal = a.cells[0].textContent;
                    bVal = b.cells[0].textContent;
                    return bVal.localeCompare(aVal);
                case 'class-asc':
                    aVal = a.cells[1].textContent;
                    bVal = b.cells[1].textContent;
                    return aVal.localeCompare(bVal);
                case 'class-desc':
                    aVal = a.cells[1].textContent;
                    bVal = b.cells[1].textContent;
                    return bVal.localeCompare(aVal);
                case 'session-asc':
                    aVal = a.cells[4].textContent;
                    bVal = b.cells[4].textContent;
                    return aVal.localeCompare(bVal);
                case 'session-desc':
                    aVal = a.cells[4].textContent;
                    bVal = b.cells[4].textContent;
                    return bVal.localeCompare(aVal);
                default:
                    return 0;
            }
        });

        // Re-render rows
        tableBody.innerHTML = '';
        filteredRows.forEach(row => tableBody.appendChild(row));
    }

    searchInput.addEventListener('input', filterAndSort);
    sortSelect.addEventListener('change', filterAndSort);
});
</script>
</body>
</html>
