<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add User - Admin Dashboard</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
  <link href="https://fonts.cdnfonts.com/css/manrope" rel="stylesheet">
  <link rel="stylesheet" href="/css/style2.css">
  <style>
    body {
      font-family: 'Manrope', sans-serif;
      display: flex;
      background: #f7f8fc;
      color: #333;
    }

    .main-content {
      flex: 1;
      padding: 30px;
    }

    .form-container {
      background: #fff;
      padding: 25px 30px;
      border-radius: 10px;
      box-shadow: 0 3px 10px rgba(0,0,0,0.1);
      max-width: 600px;
      margin: 0 auto;
    }

    h1 {
      font-size: 22px;
      color: #1e3c72;
      text-align: center;
      margin-bottom: 25px;
    }

    form label {
      font-weight: 600;
      margin-bottom: 5px;
      display: block;
    }

    form input, form select {
      width: 100%;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 6px;
      margin-bottom: 15px;
      font-size: 15px;
    }

    form input:focus, form select:focus {
      border-color: #2a5298;
      outline: none;
    }

    .btn {
      display: inline-block;
      padding: 10px 20px;
      background: #2a5298;
      color: #fff;
      font-weight: 600;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      transition: 0.3s;
    }

    .btn:hover {
      background: #1e3c72;
    }

    .alert {
      padding: 10px 15px;
      border-radius: 8px;
      margin-bottom: 15px;
    }

    .alert-error {
      background: #ffe5e5;
      color: #b30000;
      border: 1px solid #f5b0b0;
    }

    .alert-success {
      background: #e5ffe9;
      color: #157d3d;
      border: 1px solid #b7f0c1;
    }
  </style>
</head>
<body>

  <!-- Include sidebar -->
  <%- include('../partials/sidebar') %>

  <main class="main-content">
    <h1><i class="fa fa-user-plus"></i> Add New User</h1>

    <% if (error) { %>
      <div class="alert alert-error"><%= error %></div>
    <% } %>

    <% if (success) { %>
      <div class="alert alert-success"><%= success %></div>
    <% } %>

    <div class="form-container">
      <form action="/admin/add-user" method="POST">
        <label for="name">Full Name</label>
        <input type="text" id="name" name="name" placeholder="Enter full name" required>

        <label for="email">Email Address</label>
        <input type="email" id="email" name="email" placeholder="Enter email address" required>

        <label for="role">Select Role</label>
        <select id="role" name="role" required>
          <option value="">-- Choose Role --</option>
          <option value="student">Student</option>
          <option value="parent">Parent</option>
          <option value="teacher">Teacher</option>
        </select>

        <div id="studentField" style="display: none;">
          <label for="studentId">Linked Student (for Parent/Student)</label>
          <select id="studentId" name="studentId">
            <option value="">-- Select Student --</option>
            <% students.forEach(student => { %>
              <option value="<%= student._id %>">
                <%= student.name %> (<%= student.regNumber %>)
              </option>
            <% }); %>
          </select>
        </div>

        <label for="password">Temporary Password / PIN</label>
        <input type="password" id="password" name="password" placeholder="Enter a temporary password or PIN" required>

        <label for="phoneNumber">Phone Number (optional)</label>
        <input type="tel" id="phoneNumber" name="phoneNumber" placeholder="08012345678">

        <button type="submit" class="btn">Add User</button>
      </form>
    </div>
  </main>

  <script>
    const roleSelect = document.getElementById('role');
    const studentField = document.getElementById('studentField');

    roleSelect.addEventListener('change', function() {
      const value = this.value;
      if (value === 'student' || value === 'parent') {
        studentField.style.display = 'block';
      } else {
        studentField.style.display = 'none';
      }
    });
  </script>
</body>
</html>
