<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - Add User</title>
  <link rel="stylesheet" href="/css/style2.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
  <link href="https://fonts.cdnfonts.com/css/manrope" rel="stylesheet">
  <style>
    .student-info {
      background: #f8f9ff;
      border-left: 4px solid #2a5298;
      padding: 10px 15px;
      border-radius: 6px;
      margin-top: 10px;
    }
  </style>
</head>

<body>
  <!-- Sidebar -->
    <%- include('../partials/sidebar') %>

    <!-- Main Content -->
    <div class="main-content">
      <header>
        <button class="menu-btn" id="menuBtn">
          <i class="fa fa-bars"></i>
        </button>
           <h1>Add User</h1>
      </header>
    
      <% if (error) { %>
        <div class="alert alert-error"><%= error %></div>
      <% } %>

      <% if (success) { %>
        <div class="alert alert-success"><%= success %></div>
      <% } %>
 <main class="admin-content">
      <section class="form-container">
        <form action="/admin/add-user" method="POST" class="student-form">
          
          <div class="form-group">
            <label for="name">Full Name *</label>
            <input type="text" id="name" name="name" placeholder="Enter full name" required>
          </div>

          <div class="form-group">
            <label for="email">Email Address *</label>
            <input type="email" id="email" name="email" placeholder="Enter email address" required>
          </div>

          <div class="form-group">
            <label for="role">Select Role *</label>
            <select id="role" name="role" required>
              <option value="">-- Choose Role --</option>
              <option value="student">Student</option>
              <option value="parent">Parent</option>
              <option value="teacher">Teacher</option>
            </select>
          </div>

          <!-- Linked Student -->
          <div class="form-group" id="studentField" style="display: none;">
            <label for="studentId">Linked Student (for Parent/Student)</label>
            <select id="studentId" name="studentId">
              <option value="">-- Select Student --</option>
              <% students.forEach(student => { %>
                <option value="<%= student._id %>" 
                        data-name="<%= student.name %>" 
                        data-class="<%= student.classLevel %>" 
                        data-reg="<%= student.regNumber %>">
                  <%= student.name %> (<%= student.regNumber %>)
                </option>
              <% }); %>
            </select>

            <!-- Student Info Box -->
            <div id="studentInfoBox" class="student-info" style="display: none;">
              <h4 style="color: #2a5298; margin-bottom: 10px;">Student Details</h4>
              <p><strong>Name:</strong> <span id="studentName"></span></p>
              <p><strong>Class:</strong> <span id="studentClass"></span></p>
              <p><strong>Reg Number:</strong> <span id="studentReg"></span></p>
            </div>
          </div>

          <div class="form-group">
            <label for="password">Temporary Password / PIN *</label>
            <input type="password" id="password" name="password" placeholder="Enter a temporary password or PIN" required>
          </div>

          <div class="form-group">
            <label for="phoneNumber">Phone Number (optional)</label>
            <input type="tel" id="phoneNumber" name="phoneNumber" placeholder="08012345678">
          </div>

          <div class="form-actions">
            <button type="submit" class="btn btn-primary">
              <i class="fa fa-save"></i> Add User
            </button>
            <a href="/admin/users" class="btn btn-secondary">Cancel</a>
          </div>
        </form>
      </section>
  </main> 
    </div>
  </div>

  <script>
    const roleSelect = document.getElementById('role');
    const studentField = document.getElementById('studentField');
    const studentSelect = document.getElementById('studentId');
    const studentInfoBox = document.getElementById('studentInfoBox');
    const studentName = document.getElementById('studentName');
    const studentClass = document.getElementById('studentClass');
    const studentReg = document.getElementById('studentReg');

    // Show/Hide Linked Student field based on role
    roleSelect.addEventListener('change', function() {
      const value = this.value;
      if (value === 'student' || value === 'parent') {
        studentField.style.display = 'block';
      } else {
        studentField.style.display = 'none';
        studentInfoBox.style.display = 'none';
        studentSelect.value = '';
      }
    });

    // Populate Student Info Box
    studentSelect.addEventListener('change', function() {
      const selectedOption = this.options[this.selectedIndex];

      if (this.value) {
        studentName.textContent = selectedOption.dataset.name;
        studentClass.textContent = selectedOption.dataset.class;
        studentReg.textContent = selectedOption.dataset.reg;
        studentInfoBox.style.display = 'block';
      } else {
        studentInfoBox.style.display = 'none';
      }
    });

    // Sidebar toggle for mobile
    const menuBtn = document.getElementById('menuBtn');
    const sidebar = document.getElementById('sidebar');
    if(menuBtn){
      menuBtn.addEventListener('click', () => {
        sidebar.classList.toggle('active');
      });
    }
  </script>
</body>
</html>
