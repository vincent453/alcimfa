          </div>

          <div class="form-actions">
            <button type="submit" class="btn btn-primary">
              <i class="fa fa-save"></i> Add User
            </button>
            <a href="/admin/users" class="btn btn-secondary">Cancel</a>
          </div>
        </form>
      </section>
    </div>
  </div>

