  <nav class="navbar">
    <div class="container">
      <div class="nav-content">
        <div class="logo">
          <img src="public/images/images/al-cimfa logo.svg" alt="al-cimfa logo" class="logo-img">
          <h1>Al-cimfa School</h1>
        </div>
        <ul class="nav-links">
          <li><a href="index.html">Home</a></li>
          <li><a href="about.html">About</a></li>
          <li><a href="check-result.html" class="active">Check Result</a></li>
          <li><a href="contact.html">Contact</a></li>
          <li><a href="/adminlogin.html">Admin</a></li>
          <li><button class="theme-toggle" id="themeToggle" aria-label="Toggle dark mode">ðŸŒ™</button></li>
        </ul>
        <div class="hamburger" id="hamburger">
          <span></span><span></span><span></span>
        </div>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <main>
    <section class="page-header">
      <div class="container">
        <h1>Login Portal</h1>
        <p>Select your role and login to access results.</p>
      </div>
    </section>

    <!-- Login Section -->
    <section class="result-check-section">
      <div class="container">
        <div class="result-check-wrapper">
          <div class="check-form-container">
            <img src="/img/logo-removebg-preview.png" width="500px" alt="School Logo">

            <!-- Role Tabs -->
            <div class="role-tabs">
              <button type="button" class="role-tab active" onclick="switchRole('student')">
                <i class="fa fa-user-graduate"></i> Student
              </button>
              <button type="button" class="role-tab" onclick="switchRole('parent')">
                <i class="fa fa-users"></i> Parent
              </button>
            </div>

            <!-- Student Login -->
            <form action="/user/login" method="POST" class="login-form active" id="studentForm">
              <h1 class="form-title">Student Login</h1>
              <div class="info-note">
                <i class="fa fa-info-circle"></i>
                <strong>Students:</strong> Use your Email and PIN to login.
              </div>

              <div class="input-container">
                <label>Email</label><br>
                <i class="fa fa-envelope"></i>
                <input type="email" name="email" placeholder="Enter your email" required>
              </div>

              <div class="input-container">
                <label>PIN</label><br>
                <i class="fa fa-lock"></i>
                <input type="password" name="password" placeholder="Enter your PIN" required>
              </div>

              <button type="submit">Login</button>
              <p style="text-align: center; margin-top: 15px; color: #777;">
                For new accounts, please contact the school administrator.
              </p>
            </form>

            <!-- Parent Login -->
            <form action="/user/login/parent" method="POST" class="login-form" id="parentForm">
              <h1 class="form-title">Parent Login</h1>
              <div class="info-note">
                <i class="fa fa-info-circle"></i>
                <strong>Parents:</strong> Use your registered email and password.
              </div>

              <div class="input-container">
                <label>Email</label><br>
                <i class="fa fa-envelope"></i>
                <input type="email" name="email" placeholder="Enter your email" required>
              </div>

              <div class="input-container">
                <label>Password</label><br>
                <i class="fa fa-lock"></i>
                <input type="password" name="password" placeholder="Enter your password" required>
              </div>

              <button type="submit">Login</button>
              <p style="text-align: center; margin-top: 15px; color: #777;">
                For new accounts, please contact the school administrator.
              </p>
            </form>
          </div>

          <div class="info-box">
            <h3>Important Information</h3>
            <ul>
              <li>Your login credentials are confidential and should not be shared.</li>
              <li>Results are released within 2 weeks after exams.</li>
              <li>Contact <strong>support@alcimfa.edu</strong> for login assistance.</li>
              <li>Download results as PDF once logged in.</li>
              <li>All student data is secure and private.</li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- FAQ -->
    <section class="faq-section">
      <div class="container">
        <h2>Frequently Asked Questions</h2>
        <div class="faq-grid">
          <div class="faq-item">
            <h3>When will my results be available?</h3>
            <p>Results are released within two weeks after exams. Youâ€™ll be notified via email when ready.</p>
          </div>
          <div class="faq-item">
            <h3>What if I forgot my login details?</h3>
            <p>Contact the school office with your email or student ID to reset your login.</p>
          </div>
          <div class="faq-item">
            <h3>Can I download my results?</h3>
            <p>Yes, you can download your result as a PDF file once logged in.</p>
          </div>
          <div class="faq-item">
            <h3>Are parent accounts separate?</h3>
            <p>Yes, parents can view results linked to their children through their own login portal.</p>
          </div>
        </div>
      </div>
    </section>
  </main>

