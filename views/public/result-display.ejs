    <!-- Main Content -->
    <main>
        <!-- Page Header -->
        <section class="page-header">
            <div class="container">
                <h1>Your Academic Results</h1>
                <p>Second Term 2024 Performance Report</p>
            </div>
        </section>

        <!-- Results Display Section -->
        <section class="results-display-section">
            <div class="container">
                <!-- Student Info Card -->
                <div class="student-info-card">
                    <div class="info-row">
                        <div class="info-item">
                            <label>Student Name</label>
                            <p id="studentName">Loading...</p>
                        </div>
                        <div class="info-item">
                            <label>Admission Number</label>
                            <p id="admissionNum">Loading...</p>
                        </div>
                        <div class="info-item">
                            <label>Class</label>
                            <p id="studentClass">Loading...</p>
                        </div>
                        <div class="info-item">
                            <label>Term/Session</label>
                            <p id="termSession">Loading...</p>
                        </div>
                    </div>
                </div>

                <!-- Results Table -->
                <div class="results-table-wrapper">
                    <h2>Subject Performance</h2>
                    <table class="results-table">
                        <thead>
                            <tr>
                                <th>Subject</th>
                                <th>Score</th>
                                <th>Grade</th>
                                <th>Remark</th>
                            </tr>
                        </thead>
                        <tbody id="resultsTableBody">
                            <tr>
                                <td colspan="4" style="text-align: center;">Loading results...</td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <!-- Summary Stats -->
                <div class="results-summary">
                    <div class="summary-item">
                        <h3>Total Score</h3>
                        <p class="summary-value" id="totalScore">0</p>
                    </div>
                    <div class="summary-item">
                        <h3>Average Score</h3>
                        <p class="summary-value" id="averageScore">0</p>
                    </div>
                    <div class="summary-item">
                        <h3>Grade Point</h3>
                        <p class="summary-value" id="gradePoint">0.0</p>
                    </div>
                    <div class="summary-item">
                        <h3>Position</h3>
                        <p class="summary-value" id="position">-</p>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="action-buttons">
                    <button class="btn btn-secondary" id="downloadPdfBtn">Download as PDF</button>
                    <button class="btn btn-secondary" id="printBtn">Print Results</button>
                    <a href="check-result.html" class="btn btn-secondary">Check Another Result</a>
                </div>

                <!-- Teacher's Comment -->
                <div class="teacher-comment">
                    <h3>Teacher's Comment</h3>
                    <p id="teacherComment">Loading...</p>
                </div>
            </div>
        </section>
    </main>

