                            <option value="SS3B">SS3B</option>
                        </select>
                    </div>

                    <div class="filter-group">
                        <label for="termFilter">Filter by Term:</label>
                        <select id="termFilter">
                            <option value="">All Terms</option>
                            <option value="first-2024">First Term 2024</option>
                            <option value="second-2024">Second Term 2024</option>
                            <option value="third-2024">Third Term 2024</option>
                            <option value="first-2025">First Term 2025</option>
                        </select>
                    </div>

                    <button class="btn btn-secondary" id="resetFilters">Reset Filters</button>
                </div>
            </div>
        </section>

        <!-- Results List Section -->
        <section class="results-list-section">
            <div class="container">
                <div id="resultsList" class="results-list">
                    <div class="loading-message">Loading results...</div>
                </div>
